<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding:15,15
            spacing:20,10

            Label:
                text:"User Login"
                font_size:'20sp'
            TextInput:
                id:username
                hint_text:"Username"
            TextInput:
                id:password
                hint_text:"Password"
            RelativeLayout:
                Button:
                    text:"Login"
                    size_hint:0.4,0.6
                    pos_hint:{'center_x':0.2,'center_y':0.6}
                    on_press:root.login(root.ids.username.text,root.ids.password.text)
            Label:
                id:wrong_login
                text:""
        GridLayout:
            cols:2
            size_hint:0.2,0.2
            padding:10,10
            spacing:10,10
            Button:
                text:"Forgot Password"
                background_color:'salmon'
                opacity:1 if self.state=='normal' else 0.4
                color: 'white' if self.state=='normal' else 'green'
            Button:
                text:"Sign Up"
                background_color:'salmon'
                opacity:1 if self.state=='normal' else 0.4
                color: 'white' if self.state=='normal' else 'green'
                on_press:root.sign_up()
<SignUpScreen>:
    GridLayout:
        cols:1
        spacing:30,30
        padding:20,20
        Label:
            text:"Sign Up \n Enter user name and password"
        TextInput:
            id:username
            hint_text:"Username"
        TextInput:
            id:password
            hint_text:"password"
        Button:
            text:"Submit"
            on_press:root.add_user(root.ids.username.text,root.ids.password.text)

<SignUpScreenSucess>:
    GridLayout:
        cols:1
        Label:
            text:"Sign-up successfull"
        Button:
            text:"Login page"
            on_press:root.go_to_login()
<LoginScreenSuccess>:
    GridLayout:
        cols:1
        spacing:30,30
        padding:20,20
        RelativeLayout:
            ImageButton:
                size_hint:0.3,0.3
                on_press:root.logout()
                source:'logout_hover.png' if self.hovered else 'logout_nothover.png'
                pos_hint:{'center_x':0.95, 'center_y':0.9}
        Label:
            text:"How are you feeling"
        TextInput:
            id:feeling
            hint_text:""
        Button:
            text:"Enlighten Me"
            on_press:root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id:quotes
                text:""
                text_size:self.width, None
                size_hint_y:None
                height: self.texture_size[1]
<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignUpScreen:
        name:"sign_up_screen"
    SignUpScreenSucess:
        name:"sign_up_screen_success"
    LoginScreenSuccess:
        name:"login_screen_success"